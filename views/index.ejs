<!DOCTYPE html>
<html>

<head>
    <title>CSE412 Honor Project</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 50px;
            margin: 25px;
        }

        button {
            width: 200px;
            height: 50px;
        }

        .container {
            width: 1275px;
            display: flex;
            justify-content: flex-start;
            flex-wrap: wrap;
            gap: 25px;
            padding: 25px;
        }

        .card {
            width: 250px;
            height: 150px;
            padding: 25px;
            background-color: #E1E1E1;
        }

        #SendMessageContainer {
            position: absolute;
            opacity: 0;
            top: 200px;
            width: 300px;
            height: 200px;
            padding: 25px;
            background-color: #1E1E1EB0
        }
    </style>

    <script>
        function ShowMessageContainer() {
            var ele = document.getElementById("SendMessageContainer");
            ele.style.opacity = (ele.style.opacity == 1) ? 0 : 1;
        }
    </script>
</head>

<body>
    <button onclick="ShowMessageContainer();">
        Send Message
    </button>

    <div class="container">
        <% messageData.forEach(function(row) { %>
            <div class='card'><%= row.text %></div>
        <% }); %>
    </div>

    <form id="SendMessageContainer" method="post" action="/submit">
        <input name='text' required maxlength='255' style="width: 100%; height: 70%;" onfocus="this.value=''; this.onfocus='hey';"></input>

        <button type="submit" style="height: 20%; width: auto;">
            Submit
        </button>
    </form>
</body>

</html>